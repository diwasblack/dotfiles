function sync_ssh_files {
    # Create zip file in tmp folder
    zip -r /tmp/ssh.zip ~/.ssh

    # Encrpt ssh with AES256 symmetric key
    gpg -c --cipher-algo AES256 /tmp/ssh.zip

    # Sync files to drive
    rclone sync /tmp/ssh.zip.gpg drive:config
}

function sync_rclone_config {
    rclone sync ~/.rclone.conf drive:config
}

function sync_zsh_files {
    rclone sync ~/.zshrc_extra drive:config
    rclone sync ~/.zsh_history drive:config
}
alias syncnotes="rclone sync ~/notes drive:notes"
alias syncdot="sync_zsh_files; sync_rclone_config; sync_ssh_files"

# added by Miniconda3 installer
export PATH="$HOME/miniconda3/bin:$PATH"
export PATH="$PATH:$HOME/.local/bin"
