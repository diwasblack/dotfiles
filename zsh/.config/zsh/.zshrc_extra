function sync_ssh_files {
    # Make a temporary directory
    mkdir -p /tmp/keys/gpg

    # Copy SSH files
    cp -r ~/.ssh /tmp/keys/

    # Export GPG files
    gpg -a --export-secret-keys diwasblack@gmail.com > /tmp/keys/secret.key
    gpg -a --export-ownertrust > /tmp/keys/ownertrust.txt

    # Create zip file in tmp folder
    cd /tmp && zip -r keys.zip keys

    # Encrpt keys zip with AES256 symmetric key
    gpg -c --cipher-algo AES256 /tmp/keys.zip

    # Sync files to drive
    rclone sync /tmp/keys.zip.gpg drive:config
}

# Sync folder to specified remote service
function sync_to_remote {
    rclone sync $2 $1:$2
}

